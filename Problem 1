#include <iostream>
#include <cstdlib> \for random numbers
#include <conio.h>
using namespace std;

int main()
{
	int count;

	for(count=1; count <=4; count++)
	{
		if (count == 1)
			cout << "First Game" << endl;
		else if (count ==2)
			cout << "Second Game" << endl;
		else if (count==3)
			cout << "Third Game" << endl;
		else
			cout << "Fourth Game" << endl;


		const int boxPrice1 = 250.00;
		int box1;
			cout << "Please enter the number of Box tickets Sold: " << endl;
			cin >> box1;
		int boxTotal1 = boxPrice1 * box1;
			cout << "Total amount of sold Box tickets = $"  << boxTotal1 << endl;

	cout << " " << endl;

		const int sidelinePrice1 = 100.00;
		int sideline1;
			cout << "Please enter the number of Sideline tickets Sold: " << endl;
			cin >> sideline1;
		int sidelineTotal1 = sidelinePrice1 * sideline1;
			cout << "Total amount of sold Sideline tickets = $" << sidelineTotal1 << endl;

	cout << " " << endl;

		const int premiumPrice1 = 50.00;
		int premium1;
			cout << "Please enter the number of Premium tickets Sold: " << endl;
			cin >> premium1;
		int premiumTotal1 = premiumPrice1 * premium1;
			cout << "Total amount of sold Premium tickets = $" << premiumTotal1 << endl;

	cout << " " << endl;

		const int genAdPrice1 = 25.00;
		int genAd1;
			cout << "Please enter the number of General Admission tickets Sold: " << endl;
			cin >> genAd1;
		int genAdTotal1 = genAdPrice1 * genAd1;
			cout << "Total amount of sold General Admission tickets = $" << genAdTotal1 << endl;

	cout << " " << endl;

		int Total1 = boxTotal1 + sidelineTotal1 + premiumTotal1 + genAdTotal1;
			cout << "The total sale from all the tickets sold From game 1 is: $" << Total1 << endl;

	cout << " " << endl;
	cout << " " << endl;
	}
	_getch();
	return 0;
}
